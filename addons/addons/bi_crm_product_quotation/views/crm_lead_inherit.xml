<?xml version="1.0"?>
<odoo>
    <record id="crm_lead_view_form_view_inherit" model="ir.ui.view">
        <field name="name">crm.lead.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="is_crm_quotation" invisible='1'/>
            </xpath>
            <xpath expr="//button[@name='action_set_won_rainbowman']" position="after">
                <button string="انشاء عرض سعر" name="action_quotations_view" type="object" class="oe_highlight" invisible="type == 'lead' and probability == 0 or not active or is_crm_quotation"/>
			<button class="oe_stat_button" invisible="stage_id != 12" string="طلب تقدير الرسوم" type="object" name="request_price" icon="fa-pencil-square-o"/>
			 <button class="oe_stat_button" invisible="stage_id != 11" string="تقديم للمتابعة" type="object" name="request_progress" icon="fa-pencil-square-o"/>

            </xpath>
            <xpath expr="//button[@name='action_schedule_meeting']" position="before">
                <button class="oe_stat_button" type="object"
                        name="open_quotation_from_view_action" icon="fa-pencil-square-o"
                        invisible="type == 'lead' and probability == 0 or not active or is_crm_quotation">
                        <field name="crm_count" string="Quotations" widget="statinfo" invisible="type == 'lead' and probability == 0 or not active or is_crm_quotation"/>
                </button>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string = "Products">
                    <field name="lead_product_ids" nolabel="1">
                        <tree editable="bottom" string="Products">
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="product_uom_quantity"/>
                            <field name="product_uom"/>
                            <field name="price_unit"/>
                            <field name="tax_id" widget="many2many_tags"/>
                            <field name="product_uom_category_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="open_crm_opportunity_action">
        <field name="name">Pipeline</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">kanban,tree,graph,pivot,form,calendar,activity</field>
        <field name="domain">[('type','=','opportunity'), ('is_crm_quotation','=',True)]</field>
        <field name="context">{
                    'default_type': 'opportunity',
                    'search_default_assigned_to_me': 1,
                    'default_is_crm_quotation': True
        }</field>
        <field name="search_view_id" ref="crm.view_crm_case_opportunities_filter"/>
    </record>
	
       <record id="action_request_product" model="ir.actions.act_window">
            <field name="name">Request Price</field>
            <field name="res_model">request.price</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <!-- Define the tree view for Request Product -->
        <record id="view_request_price_tree" model="ir.ui.view">
            <field name="name">request.price.tree</field>
            <field name="model">request.price</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Define your tree view fields here -->
                    <field name="name"/>
                    <field name="crm_desc"/>
                    <!-- Add other fields as needed -->
                </tree>
            </field>
        </record>

        <!-- Define the form view for Request Product -->
        <record id="view_request_price_form" model="ir.ui.view">
            <field name="name">request.price.form</field>
            <field name="model">request.price</field>
            <field name="arch" type="xml">
                <form>
                    <!-- Define your form view fields here -->
                    <sheet>
<header> 
                    <field name="status" widget="statusbar" readonly="1"/>

            <button class="oe_stat_button" string="الغاء" type="object" name="set_status_cancel" />
            <button class="oe_stat_button" string="تم" type="object" name="set_status_done"  />

 </header>
                        <group>
                            <field name="name"/>
                            <field name="crm_desc"/>
                           <field name="lead_line_id"/>
                        <field name="request_product_ids">
                       <tree editable="bottom" string="Products">
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="product_uom_quantity"/>
                            <field name="product_uom"/>
                            <field name="price_unit"/>
                            <field name="tax_id" widget="many2many_tags"/>
                            <field name="product_uom_category_id" invisible="1"/>
                        </tree>
         </field>

                            <!-- Add other fields as needed -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
		
		
		      <record id="action_request_copy" model="ir.actions.act_window">
            <field name="name">Request Price</field>
            <field name="res_model">copy.rights</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <record id="view_copy_rights_tree" model="ir.ui.view">
            <field name="name">copy.rights.tree</field>
            <field name="model">copy.rights</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Define your tree view fields here -->
                    <field name="name"/>
                    <field name="crm_desc"/>
					<field name="service_type"/>
					
                    <!-- Add other fields as needed -->
                </tree>
            </field>
        </record>

        <!-- Define the form view for Request Product -->
        <record id="view_copy_rights_form" model="ir.ui.view">
            <field name="name">copy.rights.form</field>
            <field name="model">copy.rights</field>
            <field name="arch" type="xml">
            <form>
    <header>
        <button string="الغاء" type="object" class="oe_highlight" name="set_status_cancel"/>
        <button string="تم" type="object" class="oe_highlight" name="set_status_done"/>
        <field name="status" widget="statusbar" readonly="1"/>
    </header>

    <sheet>
        <group>
            <group>
                <field name="name" placeholder="Enter Name" class="oe_inline"/>
                <field name="crm_desc" placeholder="Enter Description" class="oe_inline"/>
            </group>
            <group>
                <field name="lead_line_id" placeholder="Enter Lead Line ID" class="oe_inline"/>
                <field name="service_type" placeholder="Enter Service Type" class="oe_inline"/>
            </group>
        </group>
    </sheet>
</form>

            </field>
        </record>


         
</odoo>

